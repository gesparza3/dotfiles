#!/usr/bin/env bash
set -euo pipefail

if [ "$(uname -s)" = "Linux" ]; then
  sudo apt update
  sudo apt install -y \
    zsh tmux ranger neovim curl git fzf ripgrep

  # Optional: set zsh as default
  if command -v zsh >/dev/null && [ "$SHELL" != "$(command -v zsh)" ]; then
    chsh -s "$(command -v zsh)" "$USER" || true
  fi
fi
